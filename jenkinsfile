pipeline {
    agent any
    tools {
        maven 'M1'
    }

    stages {
        stage('Clone') {
            steps {
                git branch: 'main', url: 'https://github.com/Karthick-sketch769/maven-jenkins.git'
            }
        }

        stage('Build') {
            steps {
                sh 'mvn install'
                sh 'mvn -Dmaven.test.failure.ignore=true clean package'
            }
        }
   stage ('docker image') {
     steps {
         sh 'docker build -t myteam .'
     }
     }
     stage ('docker container') {
         steps {
             sh 'docker run -itd -p 5000:5000 --name boost myteam'
         }
     }
    }
}
